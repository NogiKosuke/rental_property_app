<h1>物件一覧</h1>

<table>
  <tr>
    <th>物件名</th>
    <th>賃料</th>
    <th>住所</th>
    <th>築年数</th>
    <th>備考</th>
  </tr>

<% @properties.each do |prt| %>
  <tr>
    <td><%= prt.name %></td>
    <td><%= prt.rent %></td>
    <td><%= prt.adress %></td>
    <td><%= prt.age %></td>
    <td><%= prt.remark %></td>
    <td><%= link_to '詳細', property_path(prt.id) %></td>
    <td><%= link_to '編集', edit_property_path(prt.id) %></td>
    <td><%= link_to '削除', property_path(prt.id), method: :delete, data: { confirm: '本当に削除しますか？'} %></td>
  </tr>
<% end %>
</table>
<br>
<%= link_to '物件を登録する', new_property_path %>